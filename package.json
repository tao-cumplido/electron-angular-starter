{
    "name": "ng-electron",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "ng": "ng",
        "electron": "electron",
        "wait": "wait-on",
        "start": "run-p electron:build:dev serve",
        "serve": "run-p \"ng -- serve\" start:electron -r",
        "build:angular:dist": "ng build --prod",
        "build:electron:dev": "webpack --require ts-node/register",
        "build:electron:dist": "npm run build:electron:dev -- --mode production",
        "start:electron": "run-s \"wait -- ./dev/main.js\" \"wait -- http-get://localhost:4200\" \"electron -- ./dev\"",
        "test:angular": "ng test",
        "test:electron": "jasmine-ts --config=./jasmine.json ./src/main/**/*.spec.ts",
        "test:e2e": "run-s build:electron:dev \"ng -- e2e\"",
        "lint": "run-s lint:*",
        "lint:angular": "ng lint ng-electron --format=verbose --fix",
        "lint:electron": "tslint -p src/main/tsconfig.json --format verbose --fix",
        "lint:e2e": "ng lint ng-electron-e2e --format=verbose --fix",
        "lint-staged": "lint-staged",
        "precommit": "run-s lint-staged lint"
    },
    "lint-staged": {
        "ignore": [
            "package.json",
            "package-lock.json"
        ],
        "linters": {
            "*.{ts,css,scss,js,json,md}": [
                "prettier --write",
                "git add"
            ]
        }
    },
    "dependencies": {
        "@angular/animations": "~6.1.0-beta.0",
        "@angular/common": "~6.1.0-beta.0",
        "@angular/compiler": "~6.1.0-beta.0",
        "@angular/core": "~6.1.0-beta.0",
        "@angular/forms": "~6.1.0-beta.0",
        "@angular/http": "~6.1.0-beta.0",
        "@angular/platform-browser": "~6.1.0-beta.0",
        "@angular/platform-browser-dynamic": "~6.1.0-beta.0",
        "@angular/router": "~6.1.0-beta.0",
        "core-js": "^2.5.4",
        "rxjs": "^6.0.0",
        "zone.js": "^0.8.26"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.7.0-beta.0",
        "@angular/cli": "~6.1.0-beta.0",
        "@angular/compiler-cli": "~6.1.0-beta.0",
        "@angular/language-service": "~6.1.0-beta.0",
        "@types/fs-extra": "^5.0.3",
        "@types/jasmine": "~2.8.6",
        "@types/jasminewd2": "~2.0.3",
        "@types/node": "~8.9.4",
        "@types/webpack": "^4.4.0",
        "@types/webpack-merge": "^4.1.3",
        "codelyzer": "~4.3.0",
        "electron": "^2.0.2",
        "electron-chromedriver": "^2.0.0",
        "fs-extra": "^6.0.1",
        "husky": "^0.14.3",
        "jasmine-core": "~2.99.1",
        "jasmine-spec-reporter": "~4.2.1",
        "jasmine-ts": "^0.2.1",
        "karma": "~1.7.1",
        "karma-chrome-launcher": "~2.2.0",
        "karma-coverage-istanbul-reporter": "~2.0.0",
        "karma-jasmine": "~1.1.1",
        "karma-jasmine-html-reporter": "^0.2.2",
        "lint-staged": "^7.2.0",
        "npm-run-all": "^4.1.3",
        "prettier": "^1.13.5",
        "protractor": "~5.3.0",
        "ts-loader": "^4.4.1",
        "ts-node": "^6.1.1",
        "tslint": "~5.9.1",
        "tslint-config-prettier": "^1.13.0",
        "typescript": "~2.8.4",
        "wait-on": "^2.1.0",
        "webpack": "^4.12.0",
        "webpack-command": "^0.2.1",
        "webpack-merge": "^4.1.3"
    }
}
